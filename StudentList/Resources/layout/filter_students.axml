<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginLeft="@dimen/start_or_end_margin"
            android:layout_marginRight="@dimen/start_or_end_margin">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="@string/name_hint"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/person_icon"
                android:drawablePadding="@dimen/icon_padding"
                android:imeOptions="actionNext"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginLeft="@dimen/start_or_end_margin"
            android:layout_marginRight="@dimen/start_or_end_margin"
            app:hintEnabled="false">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="@string/group_hint"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/group_icon"
                android:drawablePadding="@dimen/icon_padding" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/birthdate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_marginLeft="@dimen/start_or_end_margin"
            android:layout_marginRight="@dimen/start_or_end_margin"
            app:hintEnabled="false">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="@string/birthdate_hint"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/birthdate_icon"
                android:drawablePadding="@dimen/icon_padding" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/confirm_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/confirm_icon"
        app:fabSize="normal"
        android:layout_margin="@dimen/start_or_end_margin" />
</RelativeLayout>